<Window x:Class="WpdfAppDb.DashboardWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:local="clr-namespace:WpdfAppDb"
            mc:Ignorable="d"
            Title="MainWindow" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="4*"/>
           
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0"
               Grid.ColumnSpan="2"
               FontSize="28" 
               Padding="5"
               HorizontalAlignment="Center"
               FontWeight="Bold"
               Text="Services Dashboard"></TextBlock>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBlock 
                Text ="Select and Add a service"
                FontSize="20" 
                Padding="5"
                HorizontalAlignment="Center"
                FontWeight="Bold"
                       ></TextBlock>
            <Button FontSize="20"
                VerticalAlignment="Center"
                Padding="8"
                Margin="5"
                Background="#FF6200"
                Foreground="White"
                FontWeight="SemiBold"
                Click="Add_Vaccination">Vaccination
            </Button>
            <Button FontSize="20"
                Padding="8"
                Margin="5"
                Background="#CC4E00 "
                Foreground="White"
                FontWeight="SemiBold"
                Click="Add_Pet_Grooming">Pet Grooming
            </Button>
            <Button FontSize="20"
                Padding="8"
                Margin="5"
                Background="#993C00"
                Click="Add_Health_Checkup"
                FontWeight="SemiBold"
                Foreground="White">Health Checkup
            </Button>
            <Button FontSize="20"
                Padding="8"
                Margin="5"
                Background="#662B00"
                Click="Add_Pet_Training"
                FontWeight="SemiBold"
                Foreground="White">Pet Training
            </Button>
            <Button FontSize="20"
                Padding="8"
                Margin="5"
                Background="#331500"
                Click="Add_Pet_Boarding"
                FontWeight="SemiBold"
                Foreground="White">Pet Boarding
            </Button>
            <TextBlock 
                Text ="Select and Delete a service"
                FontSize="18" 
                Padding="8,15,8,5"
                HorizontalAlignment="Center"
                FontWeight="Bold"
            ></TextBlock>
            <Button FontSize="20"
                Padding="8,8,8,10"
                Margin="5"
                Background="Red"
                FontWeight="SemiBold"
                Click="Delete_Service"
                Foreground="White">Delete
            </Button>
        </StackPanel>

        <DataGrid
            x:Name="ServicesGrid"
            AutoGenerateColumns="False"
            Grid.Row="1"
            Grid.Column="0"
            Grid.RowSpan="2"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Background="White"
            GridLinesVisibility="All"
            AlternationCount="2"
            HeadersVisibility="All"
            FontSize="12"
            FontWeight="SemiBold"
            AlternatingRowBackground="#F0F0F0">
            
            <!-- Add this line -->

            <!-- Column Header Style -->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="Gray"/>
                    <!-- Set header cells to gray -->
                    <Setter Property="Padding" Value="5"/>
                    <!-- Optional: Adds padding to header cells -->
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="Foreground" Value="White"/>
                    <!-- Makes text white for better contrast -->
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="BorderBrush" Value="Gray"/>
                    <!-- Match border color with header color -->
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <!-- Optional: Bottom border for header -->
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                    <!-- Center-align text inside cells -->
                </Style>
            </DataGrid.CellStyle>

            <!-- Row Style -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="White"/>
                </Style>
            </DataGrid.RowStyle>

            <!-- Define Columns Manually -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="Service Name" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="120"/>
                <DataGridTextColumn Header="Resource Person" Binding="{Binding Resource_person}" Width="420"/>
            </DataGrid.Columns>

        </DataGrid>





        
    </Grid>
</Window>
